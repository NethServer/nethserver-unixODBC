#!/usr/bin/perl -w

use esmith::Build::CreateLinks qw(:all);
use File::Basename;
use File::Path;

#--------------------------------------------------
# actions for nethserver-unixODBC-update event
#--------------------------------------------------

my $event = "nethserver-unixODBC-update";

